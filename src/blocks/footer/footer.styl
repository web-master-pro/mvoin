.footer
    background #e9e9e9 url(img/footer-bg.jpg) no-repeat center center
    background-size cover

    &__in
        container(1040px)
        padding 37px 20px 30px
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(900px)
            flex-flow row wrap
            justify-content center

    &__left
        width 220px
        flex 0 0 auto
        margin 0
        +below(900px)
            flex 0 1 50%
        +below(480px)
            flex 1 1 100%
            text-align center

    &__mid
        max-width 350px
        padding-top 2px
        margin 0
        +below(900px)
            order 3
            padding-top 30px
            flex 1 1 100%
        +below(480px)
            order -1
            padding-bottom 40px

    &__right
        width 210px
        padding-top 50px
        flex 0 0 auto
        text-align right
        margin 0
        +below(900px)
            flex 0 1 50%
        +below(480px)
            flex 1 1 100%
            text-align center
            order 5

    &__logo
        display inline-block
        sprite($icon_logo_footer)
        margin 0 0 20px

    &__company
        color black
        font()
        font-size 12px
        line-height 1.5
        margin 0

    &__order
        color black
        font(Bold)
        font-size 18px
        line-height 1.5
        text-align center
        margin 0 0 8px

    &__phone-link
        color black
        font(Bold)
        font-size 18px
        text-decoration none
        white-space: nowrap;
        &:hover
            text-decoration none

    &__email-link
        color #002aff
        font()
        font-size 12px
        text-decoration underline
        white-space: nowrap;
        &:hover
            text-decoration none

    &__contacts
        color black
        font()
        font-size 12px
        line-height 1.5
        text-align center
        margin 0 0 30px

    &__privacy
        display block
        color black
        font()
        font-size 12px
        line-height 1
        text-align center
        text-decoration underline
        margin 0

    &__developed
        display inline-block
        width 202px
        height 70px
        color black
        font(Bold)
        font-size 18px
        line-height 1
        text-align right
        text-decoration none
        position relative
        &:hover
            text-decoration underline
        &::before
            content ""
            display block
            sprite($icon_upakovka)
            position absolute
            top 26px

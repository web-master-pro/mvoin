.popup-recovery-ok
    display block
    max-width 400px
    min-height 200px
    background-color white
    box-shadow 0 0 30px rgba(0, 0, 0, 0.3)
    padding 90px 20px 50px
    margin auto

    &__title
        color: #000;
        font(Russo)
        font-size: 32px;
        line-height: 1.3
        text-align: center;
        margin 0 0 20px

    &__text
        max-width 278px
        color #000
        font()
        font-size 20px
        line-height 1.2
        text-align center
        margin 0 auto 45px
        strong
            font(Bold)
    &__button
        button()
        margin 0 auto


.popup-video
    display block
    width 100%
    height auto
    max-width 960px
    min-height 440px
    background-color white
    box-shadow 0 0 50px rgba(0, 0, 0, 0.5)
    padding 50px 35px 33px 35px
    position relative
    margin 20px auto
    +below(1000px)
        padding-top 90px
    +below(480px)
        padding 90px 20px 30px

    &__title
        color black
        font(Russo)
        font-size 24px
        line-height 1
        text-align left
        margin 0 0 30px
        +below(1000px)
            text-align center
        +below(480px)
            font-size 20px
            margin-bottom 40px

    &__content
        margin 0 0 10px
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(1000px)
            flex-flow column nowrap
            align-items center

    &__video
        width 100%
        max-width 570px
        +below(1000px)
            margin 0 auto 40px
        +below(700px)
            max-width 400px
            height 225px
        +below(480px)
            max-width 280px
            height 158px
        +below(460px)
            max-width 240px
            height 135px

    &__aside
        width 100%
        max-width 290px
        position relative
        +below(1000px)
            max-width: 570px
            height 200px

    &__aside-title
        color black
        font(Bold)
        font-size 18px
        line-height 1
        margin 3px 0 30px
        +below(1000px)
            text-align center

    &__textarea
        width 100%
        border 1px solid #ebebeb
        border-radius 3px
        padding 10px
        color black
        font()
        font-size 15px
        line-height 1.5
        resize: none;
        position absolute
        top 50px
        left 0
        right 0
        bottom 0

    &__placeholder
        color silver
        font()
        font-size 15px
        line-height 1.5
        position absolute
        top 70px
        left 20px
        max-width 230px
        margin 0

    &__button
        button()
        max-width 400px
        margin 45px auto 0
        display none

    &--free &__button
        display block



.popup-order
    display block
    width 100%
    height auto
    max-width 780px
    min-height 789px
    background-color white
    box-shadow 0 0 50px rgba(0, 0, 0, 0.5)
    padding 90px 50px 80px 85px
    position relative
    margin 20px auto
    +below(768px)
        padding 90px 40px 50px
    +below(480px)
        padding 90px 20px 50px

    &__title
        color black
        font(Russo)
        font-size 40px
        line-height 1
        text-transform uppercase
        text-align center
        margin 0 0 60px
        +below(480px)
            font-size 30px
            margin-bottom 40px

    &__subtitle
        max-width 450px
        color black
        font(Bold)
        font-size 20px
        line-height 1.2
        text-align center
        margin 0 auto 30px

    &__list
        display block
        list-style none
        padding 0
        margin 0

    &__item
        color black
        font()
        font-size 16px
        line-height 1.5
        padding 0
        margin 0 0 30px
        strong
            font(Bold)
        a
            color #003cff
            text-decoration underline
            &:hover
                text-decoration none

    &__checkbox-block
        display block
        max-width 410px
        margin 0 auto

    &__checkbox
        display block
        padding 0
        margin 0
        opacity 0

    &__checkbox + &__checkbox-label
        display block
        min-height 28px
        color black
        font()
        font-size 16px
        font-weight 400
        text-align left
        cursor pointer
        padding 7px 0 0 40px
        margin 0 0 0px
        position relative
        &::before
            content ""
            sprite($icon_checkbox)
            position absolute
            top 0
            left 0
        a
            color #003cff
            text-decoration underline
            &:hover
                text-decoration none

    &__checkbox:checked + &__checkbox-label
        &::before
            sprite($icon_checkbox_checked)

    &__error
        display none
        color red
        font()
        font-size 14px
        line-height 1
        margin 10px 0 0 40px

    &__button
        button()
        margin 60px auto 0

.popup-privacy
    display block
    width 100%
    height auto
    max-width 1000px
    min-height 420px
    background #fff
    padding 70px 80px 50px
    position relative
    margin 20px auto
    +below(480px)
        padding 80px 20px 40px

    &__content
        display block
        width 100%
        height 100%
        color #00060c
        font()
        font-size 18px
        line-height 1.4
        text-align left
        +below(480px)
            font-size 16px

        h2
            color #000
            font(Russo)
            font-size 30px
            line-height 1
            text-align center
            text-transform uppercase
            margin 0 auto 40px
            +below(480px)
                font-size 22px
            +below(400px)
                font-size 20px

        h3
            color #000
            font-size 24px
            font(Bold)
            line-height 1
            text-align center
            margin 0 0 25px
            +below(480px)
                font-size 20px

        p
            line-height 1.3
            margin 0 0 20px

        a
            color #002aff
            text-decoration: underline
            &:hover
                color @color
                text-decoration none

.popup
    .mfp-close
        display block
        background none
        color #cecece
        font()
        font-size 70px
        line-height 23px
        text-align right
        border none
        padding 0
        position absolute
        opacity 1
        top 30px
        right 35px
        transition color 0.3s ease
        &:hover
            color #000
            text-shadow none


.mfp-zoom-in .popup
    opacity 0
    transition all 0.2s ease-in-out
    transform scale(0.8)

.mfp-zoom-in.mfp-bg
    opacity 0
    transition all 0.3s ease-out

.mfp-zoom-in.mfp-ready .popup
    opacity 1
    transform scale(1)

.mfp-zoom-in.mfp-ready.mfp-bg
    opacity 0.8

.mfp-zoom-in.mfp-removing .popup
    transform scale(0.8)
    opacity 0

.mfp-zoom-in.mfp-removing.mfp-bg
    opacity 0

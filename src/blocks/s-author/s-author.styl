.s-author
    display block
    width 100%
    min-height 1289px
    background-color #f7f7f7
    background-image url(img/s-author-bg.jpg)
    background-repeat no-repeat
    background-position center center
    position relative
    +below(1000px)
        background-image none

    &__in
        container(1230px)
        +below(1000px)
            padding 70px 20px

    &__gallery
        display block
        width 470px
        list-style none
        font-size 0
        padding 0
        margin 0
        position absolute
        top 975px
        left 3px
        +below(1160px)
            width 350px
        +below(1000px)
            width 100%
            text-align center
            position relative
            left auto
            top auto
            margin 0 auto 50px


    &__gallery-item
        display inline-block
        vertical-align top
        width 115px
        height 90px
        padding 0
        margin 0
        position relative

    &__gallery-img
        display block
        width 112px
        height 87px

    &__gallery-link
        display block
        width 113px
        height 87px
        position absolute
        top 0
        left 0
        background-color rgba(11,11,11,.8)
        opacity 0
        transition opacity .5s ease
        &::before
            content ""
            sprite($icon_zoom)
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
        &:hover
            opacity 1

    &__top
        display block
        width 100%
        max-width 650px
        position absolute
        top 135px
        left 475px
        +below(1160px)
            left auto
            right 20px
        +below(1040px)
            width 610px
        +below(1000px)
            width 100%
            top auto
            right auto
            position relative
            margin 0 auto
            text-align center

    &__photo
        display none
        width 100%
        max-width 770px
        height auto
        margin 0 auto
        +below(1000px)
            display block

    &__pretitle
        color #b8b8bd
        font(Russo)
        font-size 30px
        line-height 1
        margin 0 0 20px
        +below(480px)
            font-size 24px

    &__title
        font()
        font-size 50px
        line-height 1
        margin 0 0 40px
        +below(480px)
            font-size 38px
        strong
            font(Extra)

    &__content
        display block
        width 100%
        max-width 620px
        position absolute
        top 330px
        left 515px
        z-index 550
        +below(1160px)
            left auto
            right 20px
        +below(1040px)
            width 580px
        +below(1000px)
            max-width 575px
            top auto
            right auto
            position relative
            margin 0 auto

    &__headline
        color black
        font()
        font-size 24px
        line-height 1.2
        padding-top 50px
        position relative
        margin 0 0 30px
        &::before
            content ""
            sprite($icon_strap_mv)
            position absolute
            top 0
            left 0
        strong
            font(Bold)
        +below(480px)
            font-size 20px

    &__list
        list-style none
        padding 0 0 0 25px
        margin 0 0 70px
        +below(480px)
            padding-left 0
            margin-bottom 50px
    &__item
        color black
        font(Bold)
        font-size 20px
        line-height 1.35
        padding 7px 0 8px 40px
        margin 0
        position relative
        &::before
            display block
            content ""
            sprite($icon_star_yellow)
            position absolute
            top 13px
            left 0
        +below(480px)
            font-size 18px

    &__list--red &__item
        &::before
            sprite($icon_star_red)

    &__videos
        list-style none
        padding 0 0 0 115px
        margin -10px 0 0
        +below(1000px)
            padding-left 25px
        +below(480px)
            padding-left 0

    &__videos-item
        display block
        min-height 35px
        color #1e499d
        font(Bold)
        font-size 18px
        line-height 1.5
        padding 0 0 0 60px
        margin-bottom 35px
        position relative
        &:last-child
            margin-bottom 0
        &::before
            content ""
            sprite($icon_video_blue_big)
            position absolute
            top 50%
            transform translateY(-50%)
            left 0
        +below(1000px)
            padding-left 40px

    &__videos-link
        color #1e499d
        font(Bold)
        font-size 18px
        line-height 1.5
        text-decoration underline
        &:hover
            text-decoration none

    &__flask
        display block
        position absolute
        bottom -500px
        left 58%
        z-index 400
        +below(1280px)
            left 50%
        +below(1000px)
            display none

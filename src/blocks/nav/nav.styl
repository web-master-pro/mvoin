.nav
    display block
    width 100%
    height 70px
    background: url(img/nav-bg.png) no-repeat center center
    box-shadow 0 0 24px rgba(0, 0, 0, 0.35)
    position relative
    z-index 100

    &--fixed
        position fixed
        top 0
        left 0
        right 0
        z-index 1000

    &__in
        container(1000px)

    &__mmenu-trigger
        position relative
        left 20px
        top 20px

    &__menu
        display block
        list-style none
        font-size 0
        padding 0
        margin 0
        position absolute
        left 60px
        top 15px
        +below(1000px)
            left 20px
        +below(768px)
            display none
            width 100%
            background-color: rgba(0, 0, 0, 0.9);
            padding 10px 20px
            top 70px
            left 0
            z-index 550
        +above(769px)
            display block !important


    &__menu-item
        display inline-block
        color white
        font()
        font-size 18px
        line-height 40px
        padding 0
        margin 0
        &:nth-child(1)
            width 188px
            +below(1000px)
                width 140px
        &:nth-child(2)
            width 250px
            +below(1000px)
                width 200px
        &:nth-child(3)
            width 150px
            +below(1000px)
                width 150px
        +below(768px)
            display block
            width 100%

    &__menu-link
        color white
        font()
        font-size 18px
        line-height 40px
        text-decoration underline
        &:hover
        &--active
            color #ffea00
            font(Bold)
            font-size 18px
            text-decoration: none

    &__button
        display block
        width 206px
        height 44px
        background-color #ffea00
        background-image linear-gradient(to top, transparent 0%, rgba(255, 255, 255, 0.16) 100%)
        border none
        border-top 2px solid transparent
        border-bottom 2px solid #b8a900
        color black
        font(Russo)
        font-size 16px
        font-weight 400
        line-height 1
        text-align center
        padding 0 20px
        transition all .5s ease
        margin 0
        position absolute
        top 13px
        right 20px
        cursor pointer
        &:hover
            background-color #ffec1b
            background-image none

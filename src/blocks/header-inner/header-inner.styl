.header-inner
    width 100%
    position relative
    min-height 80px
    background-color #313135

    &__in
        container(1040px)
        padding 15px 20px 0
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(480px)
            flex-flow column nowrap
            align-items center

    &__logo
        display inline-block
        sprite($icon_logo_inner)
        margin 0 0 14px
        flex 0 0 auto

    &__user
        display inline-block
        color white
        font()
        font-size 16px
        line-height 1.2
        text-align center
        margin 15px 0 0
        strong
            font(Bold)
        flex 0 1 auto

    &__logout
        display inline-block
        color white
        font()
        font-size 14px
        line-height 1.2
        text-decoration underline
        margin 17px 0 20px
        &:hover
            text-decoration none
        flex 0 0 auto

    &--short &__in
        justify-content center

.login-box
    width 100%
    max-width 780px
    min-height 420px
    background-color white
    box-shadow 0 0 50px rgba(0, 0, 0, 0.5)
    padding 90px 40px 90px
    +below(480px)
        padding 40px 20px

    &__title
        color black
        font(Russo)
        font-size 40px
        line-height 1.2
        text-transform uppercase
        text-align center
        margin 0 0 40px
        +below(480px)
            font-size 24px
            margin-bottom 30px

    &__subtitle
        max-width 520px
        color black
        font(Bold)
        font-size 20px
        line-height 1.5
        text-align center
        margin 0 auto 55px
        +below(480px)
            font-size 18px
            line-height 1.2
            margin-bottom 30px

    &__form-login
        margin 0 auto

    &__form-recovery
        margin 40px auto 0

.form-login
    display block
    width 100%
    max-width 340px

    &__input
        input()
        margin-bottom 20px

    &__pass
        color black
        font()
        font-size 13px
        line-height 1
        margin 0
        text-align right
        margin -15px 0 0

    &__pass-link
        color #003cff
        font()
        font-size 13px
        line-height 1
        text-decoration underline
        &:hover
            text-decoration none

    &__button
        button()
        margin 20px auto 0

.form-recovery
    display none
    width 100%
    max-width 340px

    &__title
        color black
        font(Extra)
        font-size 22px
        line-height 1.2
        text-align left
        margin 0 0 20px
        +below(480px)
            font-size 18px

    &__input
        input()
        margin-bottom 20px

    &__button
        button()
        margin 0 auto

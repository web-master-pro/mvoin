.s-team
    background-color #fff

    &__in
        container(1000px)
        padding 125px 20px 30px
        min-height 1020px
        +below(1000px)
            padding-top 70px

    &__title
        max-width 590px
        color black
        font()
        font-size 24px
        line-height 36px
        margin 0 0 135px 375px
        strong
            font(Extra)
            font-size 32px
        +below(1000px)
            margin 0 auto 10px
            text-align center
        +below(480px)
            font-size 20px
            line-height 30px
            strong
                font-size 26px

    &__experts
        display block
        width 100%
        max-width 597px
        height auto
        position absolute
        top 90px
        left -190px
        z-index 30
        +below(1000px)
            position relative
            top auto
            left auto
            margin 0 auto

    &__expensive
        display inline-block
        background-color #ffea00
        padding 19px 70px
        color black
        font(Bold)
        font-size 24px
        line-height 1
        text-align center
        position absolute
        top 263px
        left 325px
        margin 0
        z-index 20
        +below(1000px)
            display block
            max-width 500px
            padding 15px 20px
            position relative
            top auto
            left auto
            margin 0 auto 30px
        +below(480px)
            font-size 20px

    &__solution
        position relative
        margin 0 0 115px 375px
        z-index 550
        +below(1000px)
            margin 0 auto 70px
            max-width 420px

    &__solution-text
        color black
        font()
        font-size 30px
        line-height 1.4
        margin 0
        strong
            font(Bold)
        span
            color #ed1c24
            font(Bold)
        +below(480px)
            font-size 20px

    &__solution-info
        display block
        width 26px
        height 26px
        background-color #ed1c24
        border-radius 50%
        color white
        font(Extra)
        font-size 20px
        line-height 26px
        text-align center
        cursor pointer
        position absolute
        top 51px
        left 332px
        +below(480px)
            left auto
            right 0
            top 30px

    &__solution-popup
        display none
        max-width 535px
        min-height 130px
        background-color white
        box-shadow 0 0 45px rgba(0, 0, 0, 0.3)
        padding 25px 45px
        color black
        font()
        font-size 18px
        line-height 1.5
        position absolute
        top 110px
        left -45px
        strong
            font(Bold)
        +below(1000px)
            max-width 420px
            left 0
            top 90px
            padding 25px

    &__effect
        padding-top 80px
        color black
        font(Bold)
        font-size 32px
        line-height 1.5
        text-align center
        margin 0 0 75px
        position relative
        &::before
            content ""
            sprite($icon_strap_yellow)
            position absolute
            top 0
            left 9px
            +below(1000px)
                left 50%
                transform translateX(-50%)
        +below(480px)
            font-size 20px
            line-height 1.3
            margin-bottom 40px

    &__guarantee
        display block
        max-width 480px
        min-height 184px
        padding-top 35px
        padding-left 180px
        margin 0 auto
        position relative
        &::before
            content ""
            sprite($icon_guarantee)
            position absolute
            top 0
            left 0
        +below(480px)
            padding-left 0
            padding-top 200px
            text-align center
            &::before
                left 50%
                transform translateX(-50%)

    &__guarantee-title
        color #ed1c24
        font(Extra)
        font-size 30px
        line-height 1
        text-transform uppercase
        margin 0 0 15px


    &__guarantee-text
        color black
        font()
        font-size 14px
        line-height 1.5
        margin 0
